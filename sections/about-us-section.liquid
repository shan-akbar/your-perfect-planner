{{ 'about-us-section.css' | asset_url | stylesheet_tag }}
<div class="about-container">
  <div class="left-box">
    {{ section.settings.image | image_url: width: 738 | image_tag }}
  </div>
  <div class="right-box">
      <div class="heading1"><h3>About us</h3></div>
      <div class="heading2"><h1>{{ section.settings.heading2 }}</h1></div>
       <div class="heading3"><h2>{{ section.settings.heading3 }}</h2></div>
       <div class="btn"><a href="{{section.settings.button_link}}">FIND OUT MORE</a></div>
  </div>
</div>
{% schema %}
  {
    "name": "custom-about-us-section",
    "settings": [
      {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Select an image",
           
        },
      {
          "type": "text",
          "id": "heading2",
          "label": "First Heading",
          "default": "Please enter text"
        },
        {
          "type": "text",
          "id": "heading3",
          "label": "Second Heading",
          "default": "Please enter text"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
    ],
     "presets": [
    {
      "name": "custom-about-us-section"
    }
  ]
  }
{% endschema %}